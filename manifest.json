{
  "manifest_version": 2,
  "name": "Startup Pinned Bookmarks",
  "version": "1.0",
  "description": "Opens bookmarked sites as pinned tabs on startup.",
  "permissions": ["tabs", "bookmarks", "sessions"],
  "background": {
    "scripts": ["background.js"]
  },
  "applications": {
    "gecko": {
      "id": "startup-pinned@example.com"
    }
  }
}
